{
  "name": "@p1doks-downloader/electron",
  "version": "0.0.1",
  "description": "Electron GUI for P1Doks downloader",
  "main": "dist/main.js",
  "scripts": {
    "build": "npm run generate-icons && npm run install-playwright && tsc",
    "build:ui": "npm run build --workspace=@p1doks-downloader/ui",
    "copy-ui": "powershell -Command \"Copy-Item -Path '../ui/dist' -Destination './ui-dist' -Recurse -Force\"",
    "generate-icons": "node scripts/generate-icons.js",
    "install-playwright": "npx playwright install chromium",
    "dev": "npm run build:ui && npm run copy-ui && tsc && electron .",
    "start": "npm run copy-ui && npm run build && electron .",
    "clean": "rm -rf dist ui-dist package.prod.json",
    "create-prod-package": "node scripts/create-production-package.js",
    "dist": "npm run build:ui && npm run copy-ui && npm run build && npm run create-prod-package && electron-builder --win"
  },
  "dependencies": {
    "@p1doks-downloader/core": "*",
    "playwright-core": "^1.54.2"
  },
  "devDependencies": {
    "@types/node": "^24.3.0",
    "electron": "32.0.0",
    "electron-builder": "26.0.12",
    "png-to-ico": "3.0.1",
    "sharp": "0.34.4",
    "typescript": "^5.9.2"
  },
  "files": [
    "dist",
    "src/assets",
    "README.md"
  ],
  "keywords": [
    "p1doks",
    "iracing",
    "setup",
    "downloader",
    "electron",
    "gui"
  ],
  "author": "",
  "license": "ISC",
  "build": {
    "appId": "com.p1doks.downloader",
    "productName": "P1Doks Downloaderc",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "ui-dist/**/*",
      "package.prod.json:package.json"
    ],
    "asarUnpack": [
      "node_modules/@p1doks-downloader/core/**/*",
      "node_modules/playwright-core/.local-browsers/**/*"
    ],
    "compression": "maximum",
    "asar": true,
    "removePackageScripts": true,
    "nodeGypRebuild": false,
    "buildDependenciesFromSource": false,
    "npmRebuild": false,
    "forceCodeSigning": false,
    "win": {
      "target": "portable",
      "artifactName": "${productName}-${version}-standalone.${ext}",
      "requestedExecutionLevel": "asInvoker"
    }
  }
}
