{
  "name": "@iracing-setup-downloader/electron",
  "version": "0.0.1",
  "description": "Electron GUI for iRacing setup downloader",
  "main": "dist/main.js",
  "scripts": {
    "build": "npm run generate-icons && npm run install-playwright && npm run build:ui && tsc",
    "build:ui": "vite build --config src/ui/vite.config.ts",
    "dev:ui": "vite --config src/ui/vite.config.ts",
    "generate-icons": "node scripts/generate-icons.js",
    "install-playwright": "npx playwright install chromium",
    "dev": "npm run build:ui && cross-env NODE_ENV=development tsc && cross-env NODE_ENV=development electron .",
    "dev:electron-only": "npm run build:ui && cross-env NODE_ENV=development tsc && cross-env NODE_ENV=development electron .",
    "start": "npm run build && electron .",
    "clean": "rm -rf dist ui-dist package.prod.json",
    "create-prod-package": "node scripts/create-production-package.js",
    "dist": "npm run build && npm run create-prod-package && electron-builder --win"
  },
  "dependencies": {
    "@iracing-setup-downloader/p1doks-download": "*",
    "@iracing-setup-downloader/hymo-download": "*",
    "playwright-core": "^1.54.2"
  },
  "devDependencies": {
    "@emotion/react": "^11.13.5",
    "@emotion/styled": "^11.13.5",
    "@mui/icons-material": "^6.1.6",
    "@mui/material": "^6.1.6",
    "@types/node": "^24.3.0",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@types/ws": "8.18.1",
    "@vitejs/plugin-react": "^4.3.3",
    "cross-env": "10.0.0",
    "electron": "32.0.0",
    "electron-builder": "26.0.12",
    "png-to-ico": "3.0.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "sharp": "0.34.4",
    "typescript": "^5.9.2",
    "vite": "^6.0.1",
    "ws": "8.18.3"
  },
  "files": [
    "dist",
    "src/assets",
    "README.md"
  ],
  "keywords": [
    "iracing",
    "setup",
    "downloader",
    "electron",
    "gui"
  ],
  "author": "",
  "license": "ISC",
  "build": {
    "appId": "com.iracing.setup.downloader",
    "productName": "iRacing Setup Downloader",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "ui-dist/**/*",
      "package.prod.json:package.json",
      "!node_modules/@mui/**/*",
      "!node_modules/@emotion/**/*",
      "!node_modules/react/**/*",
      "!node_modules/react-dom/**/*",
      "!node_modules/@types/react/**/*",
      "!node_modules/@types/react-dom/**/*",
      "!node_modules/@vitejs/**/*",
      "!node_modules/vite/**/*",
      "!src/ui/**/*"
    ],
    "asarUnpack": [
      "node_modules/@iracing-setup-downloader/p1doks-download/**/*",
      "node_modules/playwright-core/.local-browsers/**/*"
    ],
    "compression": "maximum",
    "asar": true,
    "removePackageScripts": true,
    "nodeGypRebuild": false,
    "buildDependenciesFromSource": false,
    "npmRebuild": false,
    "forceCodeSigning": false,
    "win": {
      "target": "portable",
      "artifactName": "${productName}-${version}-standalone.${ext}",
      "requestedExecutionLevel": "asInvoker"
    }
  }
}
