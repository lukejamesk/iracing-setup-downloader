{
  "name": "@p1doks-downloader/electron",
  "version": "1.0.0",
  "description": "Electron GUI for P1Doks downloader",
  "main": "dist/main.js",
  "scripts": {
    "build": "npm run generate-icons && tsc",
    "build:ui": "npm run build --workspace=@p1doks-downloader/ui",
    "copy-ui": "cp -r ../ui/dist ./ui-dist",
    "generate-icons": "node scripts/generate-icons.js",
    "dev": "tsc --watch",
    "start": "npm run build && electron .",
    "clean": "rm -rf dist ui-dist",
    "pack": "npm run build:ui && npm run copy-ui && npm run build && electron-builder --dir",
    "dist": "npm run build:ui && npm run copy-ui && npm run build && electron-builder",
    "dist:mac": "npm run build:ui && npm run copy-ui && npm run build && electron-builder --mac",
    "dist:win": "npm run build:ui && npm run copy-ui && npm run build && electron-builder --win",
    "dist:linux": "npm run build:ui && npm run copy-ui && npm run build && electron-builder --linux"
  },
  "dependencies": {
    "@p1doks-downloader/core": "*"
  },
  "devDependencies": {
    "@types/node": "^24.3.0",
    "electron": "32.0.0",
    "electron-builder": "26.0.12",
    "sharp": "0.34.4",
    "typescript": "^5.9.2"
  },
  "files": [
    "dist",
    "src/assets",
    "README.md"
  ],
  "keywords": [
    "p1doks",
    "iracing",
    "setup",
    "downloader",
    "electron",
    "gui"
  ],
  "author": "",
  "license": "ISC",
  "build": {
    "appId": "com.p1doks.downloader",
    "productName": "P1Doks Downloader",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "ui-dist/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.utilities",
      "icon": "dist/assets/icon.icns",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ],
      "icon": "dist/assets/icon.ico"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "rpm",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "dist/assets/icon.png",
      "category": "Utility"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
